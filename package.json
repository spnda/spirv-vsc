{
    "name": "spirv-vsc",
    "displayName": "SPIR-V Tools",
    "description": "Various tools for working with binary SPIR-V and SPIR-V assembly",
    "author": {
        "name": "spnda"
    },
    "version": "0.1.0",
    "publisher": "spnda",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/spnda/spirv-vsc"
    },
    "engines": {
        "vscode": ">=1.86.0"
    },
    "keywords": [
        "spirv",
        "SPIR-V",
        "assembly"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "main": "./lib/extension",
    "contributes": {
        "customEditors": [
            {
                "viewType": "spirv-binary",
                "displayName": "SPIR-V Binary Viewer",
                "selector": [
                    {
                        "filenamePattern": "*.spv"
                    }
                ],
                "priority": "default"
            }
        ]
    },
    "devDependencies": {
		"@types/node": "^18",
        "@types/vscode": "1.86.0",
        "@vscode/test-cli": "^0.0.6",
        "@vscode/test-electron": "^2.3.9",
        "typescript": "^5.3.3",
		"mocha": "^10.3.0",
		"@types/mocha": "^10.0.6"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "test": "npm run compile && vscode-test"
    }
}
